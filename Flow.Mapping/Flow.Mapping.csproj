<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>

	<Authors>Nuno ARAUJO</Authors>
	<Description>Flow.Mapping is a .NET library designed to facilitate mapping between XML/JSON data sources and .NET objects.</Description>

	<!--<PackageReadmeFile>..\README.md</PackageReadmeFile>-->
	<RepositoryUrl>https://github.com/NunoTek/Flow.Mapping</RepositoryUrl>
	<RepositoryType>git</RepositoryType>

	<EnablePackageValidation>true</EnablePackageValidation>
	<!-- Optional: Detect breaking changes from a previous version -->
	<!-- <PackageValidationBaselineVersion>1.0.0</PackageValidationBaselineVersion> -->
  </PropertyGroup>

  <ItemGroup>
	<None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Linq" Version="4.3.0" />
    <PackageReference Include="UTF.Unknown" Version="2.5.1" />
    <PackageReference Include="XPath2" Version="1.1.5" />
  </ItemGroup>

</Project>
